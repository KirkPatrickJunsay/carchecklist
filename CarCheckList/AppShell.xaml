<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarCheckList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarCheckList"
    xmlns:view="clr-namespace:CarCheckList.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CarCheckList">

    <TabBar>
        <Tab Title="Checklist" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate view:ChecklistPage}"/>
        </Tab>
        <Tab Title="History" Icon="history.png">
            <ShellContent ContentTemplate="{DataTemplate view:HistoryPage}"/>
        </Tab>
        <Tab Title="Car Info" Icon="car.png">
            <ShellContent ContentTemplate="{DataTemplate view:CarInfoPage}"/>
        </Tab>
    </TabBar>

</Shell>
